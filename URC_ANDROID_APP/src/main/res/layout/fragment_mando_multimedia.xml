<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Frag_mando">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/principal_multimedia_review"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingRight="20dp"
        android:rotation="180"
        android:id="@+id/multimedia_before"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/principal_multimedia_review"
        android:layout_alignParentRight="true"
        android:paddingRight="40dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:id="@+id/multimedia_after"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/principal_multimedia_playpause"
        android:padding="40dp"
        android:layout_toLeftOf="@id/multimedia_after"
        android:layout_centerHorizontal="true"
        android:id="@+id/multimedia_playpause"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/principal_multimedia_stop"
        android:layout_toRightOf="@id/multimedia_before"
        android:padding="40dp"
        android:id="@+id/multimedia_stop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/multimedia_playpause"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/principal_multimedia_sounddown"
            android:id="@+id/multimedia_volDown"
            android:padding="30dp"
            android:layout_weight="50"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/principal_multimedia_soundup"
            android:id="@+id/multimedia_volUp"
            android:padding="30dp"
            android:layout_weight="50"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/principal_multimedia_shutdown"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/multimedia_shutdown"/>

</RelativeLayout>