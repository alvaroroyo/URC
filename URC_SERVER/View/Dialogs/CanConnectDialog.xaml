<Window x:Class="URC_Server.View.Dialogs.CanConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="CanConnectDialogg" Height="180" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Desea aceptar la conexión con el cliente?" Name="txtText" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" TextWrapping="Wrap"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button IsDefault="True" Content="Aceptar" Height="50" Width="140" Click="Button_Click"/>
            <Button Grid.Column="1" IsCancel="True" Content="Cancelar" Height="50" Width="140" Click="No_click"/>

        </Grid>

    </Grid>
</Window>
